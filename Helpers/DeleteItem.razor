@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Color="Color.Error" Class="mb-4">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Class="mr-2" />
            @Title
        </MudText>
        <MudText>@ContentText</MudText>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">@Localizer["Cancel"]</MudButton>
        <MudButton Color="Color.Error" OnClick="Submit" Variant="Variant.Filled">@SubmitButton</MudButton>
    </DialogActions>
</MudDialog>