@page "/product-detail/{id:int}"


<MudGrid Justify="Justify.SpaceAround" Class="mt-8">
    <MudStack Spacing="4">
        <MudText Typo="Typo.h5" Class="d-flex align-center gap-2 mb-2">
            <MudIcon Icon="@Icons.Material.Filled.Inventory" Class="mr-2" />
            @Localizer["ProductInfo"]
        </MudText>
        <MudText Typo="Typo.body1" Class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.QrCode" Class="mr-2" />
            <strong>@Localizer["Barcode"]:</strong> @product?.Barcode
        </MudText>

        <MudText Typo="Typo.body1" Class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.Label" Class="mr-2" />
            <strong>@Localizer["ProductName"]:</strong> @product?.Name
        </MudText>

        <MudText Typo="Typo.body1" Class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.Money" Class="mr-2" />
            <strong>@Localizer["PurchasePrice"]:</strong> @product?.PurchasePrice.ToString("C")
        </MudText>

        <MudText Typo="Typo.body1" Class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Class="mr-2" />
            <strong>@Localizer["SalePrice"]:</strong> @product?.SalePrice.ToString("C")
        </MudText>

        <MudText Typo="Typo.body1" Class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Class="mr-2" />
            <strong>@Localizer["Profit"]:</strong> @product?.Profit.ToString("C")
        </MudText>
    </MudStack>

    <MudStack Spacing="4">
        <MudText Typo="Typo.h5" Class="d-flex align-center gap-2 mb-2">
            <MudIcon Icon="@Icons.Material.Filled.Warehouse" Class="mr-2" />
            @Localizer["StockInfo"]
        </MudText>
        <MudText Typo="Typo.body1" Class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.Inventory2" Class="mr-2" />
            <strong>@Localizer["BoxCount"]:</strong> @product?.StockUnit
        </MudText>

        <MudText Typo="Typo.body1" Class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.GridOn" Class="mr-2" />
            <strong>@Localizer["ProductInBox"]:</strong> @product?.StockMultiplier
        </MudText>

        <MudText Typo="Typo.body1" Class="d-flex align-center gap-2">
            <MudIcon Icon="@Icons.Material.Filled.Category" Class="mr-2" />
            <strong>@Localizer["TotalStock"]:</strong> @product?.StockQuantity
        </MudText>
    </MudStack>
</MudGrid>

<MudGrid Spacing="6" Justify="Justify.Center" Class="mt-6">
    <MudItem>
        <MudButton OnClick='() => NavigatePage("/product-list")'
                   Color="Color.Secondary"
                   Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Filled.ArrowBack">
            @Localizer["Back"]
        </MudButton>
    </MudItem>
    <MudItem>
        <MudButton OnClick='() => NavigatePage($"/edit-product/{Id}")'
                   Color="Color.Success"
                   Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Filled.Edit">
            @Localizer["Update"]
        </MudButton>
    </MudItem>
    <MudItem>
        <MudButton OnClick='() => NavigatePage($"/edit-stock/{Id}")'
                   Color="Color.Primary"
                   Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Filled.AddShoppingCart">
            @Localizer["EnterStock"]
        </MudButton>
    </MudItem>

    <MudItem>
        <MudButton OnClick="DeleteItemAsync"
                   Color="Color.Error"
                   Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Delete">
            @Localizer["Delete"]
        </MudButton>
    </MudItem>
</MudGrid>